@model Sneakers
@{
    ViewData["Title"] = "Details - " + Model.Name;

    var sizesList = Model.Sizes?.Split(' ', StringSplitOptions.RemoveEmptyEntries) ?? Array.Empty<string>();
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid" alt="Sneakers full image" />
        </div>
        <div class="col-md-6">
            <div class="d-flex align-items-center mb-4">
                <h1 class="display-5 fw-bold text-dark me-3">@Model.Name</h1>
            </div>
            <p class="text-muted fs-5">@Model.Description</p>

            <ul class="list-group list-group-flush my-4">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span class="fw-semibold">Sizes</span>
                    <div class="d-flex justify-content-end flex-wrap">
                        @foreach (var size in sizesList)
                        {
                            <span class="badge bg-info text-dark me-1 mb-1">@size</span>
                        }
                    </div>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span class="fw-semibold">Price</span>
                    <span class="badge bg-success">@Model.Price UAH</span>
                </li>
            </ul>

            <a href="/AllProducts" class="btn btn-outline-secondary mt-4">
                <i class="bi bi-arrow-left-circle me-2"></i>Back to Products
            </a>
        </div>


    </div>
</div>