    @model UserViewModel
    @{
        ViewData["Title"] = "Register";
    }

    <div class="container-fluid d-flex justify-content-center align-items-center" style="height: 80vh;">
        <form method="post" asp-controller="Account" asp-action="Register" class="col-md-4">
            <h1 class="mb-4 text-center text-primary"><i class="bi bi-person-plus"></i> Register</h1>

            <!-- Username -->
            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" placeholder="Enter username" />
                <label for="Name">Username</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" type="email" placeholder="Enter email" />
                <label for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="mb-3 position-relative">
                <div class="form-floating">
                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter password" />
                    <label for="Password">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="button" class="btn btn-outline-secondary btn-sm shadow-none position-absolute top-50 end-0 translate-middle-y me-3 toggle-visibility" data-target="Password">
                    <i class="bi bi-eye"></i>
                </button>
            </div>

            <!-- Confirm Password -->
            <div class="mb-3 position-relative">
                <div class="form-floating">
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" />
                    <label for="ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="button" class="btn btn-outline-secondary btn-sm shadow-none position-absolute top-50 end-0 translate-middle-y me-3 toggle-visibility" data-target="ConfirmPassword">
                    <i class="bi bi-eye"></i>
                </button>
            </div>

            <!-- Submit -->
            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-primary px-4">
                    <i class="bi bi-check-circle me-2"></i> Register
                </button>
                <a href="/" class="btn btn-secondary px-4">
                    <i class="bi bi-arrow-left-circle me-2"></i> Back to Home
                </a>
            </div>
        </form>
    </div>
