@model SneakersDto
@{
    ViewData["Title"] = "Edit - " + Model.Name;
}

<div class="container mt-5">
    <h1 class="mb-4 text-center text-warning"><i class="bi bi-pencil-square"></i> Edit Sneakers</h1>

    <form method="post" enctype="multipart/form-data">
        <!-- Name -->
        <div class="form-group mb-4">
            <label asp-for="Name" class="form-label">Sneakers Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter sneakers name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Description -->
        <div class="form-group mb-4">
            <label asp-for="Description" class="form-label">Sneakers Description</label>
            <textarea asp-for="Description" class="form-control" rows="5" placeholder="Enter description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Size -->
        <div class="form-group mb-4">
            <label asp-for="Size" class="form-label">Size</label>
            <input asp-for="Size" class="form-control" type="number" placeholder="Enter size" />
            <span asp-validation-for="Size" class="text-danger"></span>
        </div>

        <!-- Price -->
        <div class="form-group mb-4">
            <label asp-for="Price" class="form-label">Price (UAH)</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Enter price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <!-- ImageUrl -->
        <div class="form-group mb-4">
            <label asp-for="ImageUrl" class="form-label">Sneakers Image URL</label>
            <input asp-for="ImageUrl" class="form-control" placeholder="Paste the image URL" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <!-- Save & Cancel buttons -->
        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-success px-4">
                <i class="bi bi-save me-2"></i> Save Changes
            </button>
            <a href="/AllProducts" class="btn btn-secondary px-4">
                <i class="bi bi-arrow-left-circle me-2"></i> Back to Products
            </a>
        </div>
    </form>
</div>
